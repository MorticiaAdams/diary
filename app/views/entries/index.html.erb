<p>
    <div>
        <p>Diary menu</p>
        <p><%= link_to("New entry", new_entry_path) %></p>
    </div>
    <div>
        <% for entry in @entries %>
            <h2><%= link_to(entry.title, entry_path(entry)) %></h2>
            <p><%= entry.date %></p>
            <p><%= entry.contents %></p>
            <p><%= link_to("Edit this entry", edit_entry_path(entry)) %></p>
            <p><%= link_to("Delete this entry", destroy_entry_path(entry) %></p>
        <% end %>
    </div>
</p>
